<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" onKeyPressed="#handleKeyPressed" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jairocuevas.controllers.LoginController">
   <children>
      <Label text="Please Log In" />
      <TextField fx:id="usernameTextField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="199.0" promptText="Username" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="usernamePasswordField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="199.0" promptText="Password" />
      <Hyperlink fx:id="registerLink" onMouseClicked="#registerScreenNav" text="Register" />
      <Label fx:id="errorLabel" />
      <Button fx:id="primaryButton" onAction="#login" text="Login" />
   </children>
   <padding>
      <Insets bottom="20.0" left="52.0" right="60.0" top="20.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</VBox>
